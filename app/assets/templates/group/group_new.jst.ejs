<div class="form-container">
  <form class="group-form-fields" action="" method="post">
    <ul class="errors"></ul>

    <div class="group-new-title">
      <label>What is your group's name?
        <input class="new-group-title" type="text" name="group[title]">
      </label>
      <input type="button" id="1" class="button btn btn-default next" value="Next">
    </div>

    <div class="group-new-location">
      <label>Where does your group meet?
        <input class="new-group-location" type="text" name="group[location]">
      </label>
      <input type="button" id="2" class="button btn btn-default next" value="Next">
    </div>

    <div class="group-new-description">
      <label>Describe your group: <br>
        <textarea class="new-group-description" name="group[description]"></textarea>
      </label>
      <input type="button" id="3" class="button btn btn-default next" value="Next">
    </div>

    <div class="group-new-member-name">
      <label>What do your group members call themselves?
        <input type="text" class="new-group-member-name" name="group[member_name]">
      </label>
      <input type="button" id="4" class="button btn btn-default next" value="Next">
    </div>

    <div class="group-new-upload-image">
      <label class="image-upload"> Upload a banner image for the group! (optional)
        <input type="button" class="image-upload btn btn-default" value="Upload Image">
      </label>
    </div>

    <div class="group-new-genre-tagging">
      <label class="image-upload"> Choose some genres for your group's games! (optional)</label>
      <div class="genre-index-container"></div>
    </div>

    <div class="submit-button">
      <input type="submit" value="Create Group" class="create-group btn btn-success">
    </div>
  </form>
</div>
